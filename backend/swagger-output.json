    "/submitanswer": {
      "post": {
        "description": "endpoint hit when user submits the answer first user authentication middleware runs followed by answer validation agter which database is updated from which leaderboard is updated in real time using socket.io",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "example": "amit"
                },
                "currentQuestion": {
                  "example": "1"
                },
                "currentTimestamp": {
                  "example": "12345678"
                },
                "answer": {
                  "example": "mars"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
